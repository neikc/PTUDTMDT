@model IEnumerable<PTUDTMDT.Models.SanPham>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid py-5 mt-5">
    <div>
        <h1>Quản lý Sản phẩm</h1>
        <p>
            <a asp-action="Create" class="btn border border-secondary rounded-pill px-3 text-primary">
                <i class="fa fa-plus-circle me-2 text-primary mt-2"></i> Thêm mới sản phẩm
            </a>
        </p>
    </div>


    <table class="table table-striped table-bordered table-hover table-sm">
        <thead class="thead-dark">
            <tr>
                <th>Hành động</th>
                <th>@Html.DisplayNameFor(model => model.TenSanPham)</th>
                <th>@Html.DisplayNameFor(model => model.GiaSanPham)</th>
                <th>@Html.DisplayNameFor(model => model.GiamGia)</th>
                <th>@Html.DisplayNameFor(model => model.GiaSauGiam)</th>
                <th>@Html.DisplayNameFor(model => model.ShortDesc)</th>
                <th>@Html.DisplayNameFor(model => model.BestSellers)</th>
                <th>@Html.DisplayNameFor(model => model.TinhTrang)</th>
                <th>@Html.DisplayNameFor(model => model.SltonKho)</th>
                <th>@Html.DisplayNameFor(model => model.HomeFlag)</th>
                <th>@Html.DisplayNameFor(model => model.MoTa)</th>
                <th>@Html.DisplayNameFor(model => model.Hinh1)</th>
                <th>@Html.DisplayNameFor(model => model.Hinh2)</th>
                <th>@Html.DisplayNameFor(model => model.NgaySanXuat)</th>
                <th>@Html.DisplayNameFor(model => model.HanSuDung)</th>
                <th>@Html.DisplayNameFor(model => model.Alias)</th>
                <th>@Html.DisplayNameFor(model => model.MaLoaiNavigation)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a class="btn btn-sm btn-outline-warning my-1" asp-action="Edit" asp-route-id="@item.MaSanPham">Chỉnh sửa</a>
                        <a class="btn btn-sm btn-outline-info mb-1" asp-action="Details" asp-route-id="@item.MaSanPham">Chi tiết</a>
                        <a class="btn btn-sm btn-outline-danger mb-1" asp-action="Delete" asp-route-id="@item.MaSanPham">Xóa</a>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.TenSanPham)</td>
                    <td>@Html.DisplayFor(modelItem => item.GiaSanPham)</td>
                    <td>@Html.DisplayFor(modelItem => item.GiamGia)</td>
                    <td>@Html.DisplayFor(modelItem => item.GiaSauGiam)</td>
                    <td>@Html.DisplayFor(modelItem => item.ShortDesc)</td>
                    <td>@Html.DisplayFor(modelItem => item.BestSellers)</td>
                    <td>@Html.DisplayFor(modelItem => item.TinhTrang)</td>
                    <td>@Html.DisplayFor(modelItem => item.SltonKho)</td>
                    <td>@Html.DisplayFor(modelItem => item.HomeFlag)</td>
                    <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
                    <td>@Html.DisplayFor(modelItem => item.Hinh1)</td>
                    <td>@Html.DisplayFor(modelItem => item.Hinh2)</td>
                    <td>@Html.DisplayFor(modelItem => item.NgaySanXuat)</td>
                    <td>@Html.DisplayFor(modelItem => item.HanSuDung)</td>
                    <td>@Html.DisplayFor(modelItem => item.Alias)</td>
                    <td>@Html.DisplayFor(modelItem => item.MaLoaiNavigation.MaLoai)</td>
                </tr>
            }
        </tbody>
    </table>


</div>