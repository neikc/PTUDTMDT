@model PTUDTMDT.Models.GiamGium

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-5 mt-5">
    <div>
        <h1>Chỉnh sửa thông tin</h1>
        <h4>@Model.MaGiamGia - @Model.TenMa</h4>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaGiamGia" />

                <div class="form-group mt-2">
                    <label asp-for="TenMa" class="control-label">Mã giảm giá</label>
                    <input asp-for="TenMa" placeholder="Nhập mã giảm giá" class="form-control" />
                    <span asp-validation-for="TenMa" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="GiaTri" class="control-label">Giá trị giảm</label>
                    <input asp-for="GiaTri" placeholder="Nhập giá trị giảm" class="form-control" />
                    <span asp-validation-for="GiaTri" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="NgayBatDau" class="control-label">Ngày bắt đầu</label>
                    <input asp-for="NgayBatDau" placeholder="Nhập ngày bắt đầu (dd/MM/yyyy)" class="form-control" />
                    <span asp-validation-for="NgayBatDau" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="NgayKetThuc" class="control-label">Ngày kết thúc</label>
                    <input asp-for="NgayKetThuc" placeholder="Nhập ngày kết thúc (dd/MM/yyyy)" class="form-control" />
                    <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="SoLuong" class="control-label">Số lượng</label>
                    <input asp-for="SoLuong" placeholder="Nhập số lượng" class="form-control" />
                    <span asp-validation-for="SoLuong" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="TrangThai" class="control-label">Trạng thái (true/false)</label>
                    <input asp-for="TrangThai" placeholder="Nhập trạng thái (true/false)" class="form-control" />
                    <span asp-validation-for="TrangThai" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <input type="submit" value="Lưu" class="btn border border-secondary rounded-pill px-3 text-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-2">
        <a asp-action="Index" class="btn border border-secondary rounded-pill px-3 text-primary">
            <i class="fa fa-arrow-left me-2 text-primary"></i> Danh sách Giảm giá
        </a>
    </div>
</div>
