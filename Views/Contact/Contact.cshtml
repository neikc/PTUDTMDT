
@{
    ViewData["Title"] = "Liên hệ";
}

<!-- Bắt đầu trang liên hệ -->
<div class="container-fluid contact py-5">
    <div class="container py-5">
        <!-- Phần chứa nội dung liên hệ -->
        <div class="p-5 bg-light rounded">
            <div class="row g-4">
                <!-- Phần giới thiệu liên hệ -->
                <div class="col-12">
                    <div class="text-center mx-auto" style="max-width: 700px;">
                        <h1 class="text-primary">Liên lạc với chúng tôi</h1>
                        <!-- Mô tả ngắn về form liên hệ -->
                        <p class="mb-4"> Nếu có thắc mắc về sản phẩm và dịch vụ, hãy liên hệ ngay với chúng tôi <a href="https://htmlcodex.com/contact-form">Tải về ngay</a>.</p>
                    </div>
                </div>
                <!-- Bản đồ Google Maps -->
                <div class="col-lg-12">
                    <div class="h-100 rounded">
                        <iframe class="rounded w-100"
                                style="height: 400px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387191.33750346623!2d-73.97968099999999!3d40.6974881!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew%20York%2C%20NY%2C%20USA!5e0!3m2!1sen!2sbd!4v1694259649153!5m2!1sen!2sbd"
                                loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
                <!-- Form liên hệ -->
                <div class="col-lg-7">
                    <form action="" class="">
                        <!-- Trường nhập tên người dùng -->
                        <input type="text" class="w-100 form-control border-0 py-3 mb-4" placeholder="Nhập tên của bạn">
                        <!-- Trường nhập email -->
                        <input type="email" class="w-100 form-control border-0 py-3 mb-4" placeholder="Nhập Email">
                        <!-- Trường nhập tin nhắn -->
                        <textarea class="w-100 form-control border-0 mb-4" rows="5" cols="10" placeholder="Nội dung"></textarea>
                        <!-- Nút gửi form -->
                        <button class="w-100 btn form-control border-secondary py-3 bg-white text-primary " type="submit">Gửi ngay</button>
                    </form>
                </div>
                <!-- Thông tin liên hệ (địa chỉ, email, số điện thoại) -->
                <div class="col-lg-5">
                    <!-- Địa chỉ -->
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Địa chỉ</h4>
                            <p class="mb-2">279 Nguyễn Tri Phương, phường 4, Quận 10</p>
                        </div>
                    </div>
                    <!-- Email -->
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-envelope fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Gửi email cho chúng tôi</h4>
                            <p class="mb-2">maiphuong6141992@gmail.com</p>
                        </div>
                    </div>
                    <!-- Số điện thoại -->
                    <div class="d-flex p-4 rounded bg-white">
                        <i class="fa fa-phone-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Điện thoại</h4>
                            <p class="mb-2">0375744312</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Kết thúc trang liên hệ -->

