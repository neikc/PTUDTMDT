@{
    ViewData["Title"] = "Register";
    Layout = "_LayoutAccount";
}
@model PTUDTMDT.ViewModels.AccountViewModel.RegisterViewModel


<div class="container mt-5" style="margin-top:7em; margin-bottom:7em">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow p-4">
                <h2 class="text-center mb-4">Đăng ký tài khoản</h2>
                <form asp-action="Register" method="post" enctype="multipart/form-data">
                    <!-- Tên tài khoản -->
                    <div class="mb-3">
                        <label for="TenTaiKhoan" class="form-label">Tên tài khoản:</label>
                        <input type="text" id="TenTaiKhoan" asp-for="TenTaiKhoan" class="form-control" required placeholder="Nhập tên tài khoản">
                        <span asp-validation-for="TenTaiKhoan" class="text-danger"></span>
                    </div>

                    <!-- Mật khẩu -->
                    <div class="mb-3">
                        <label for="MatKhau" class="form-label">Mật khẩu:</label>
                        <input type="password" id="MatKhau" asp-for="MatKhau" class="form-control" required placeholder="Nhập mật khẩu">
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>

                    <!-- Họ tên -->
                    <div class="mb-3">
                        <label for="HoTen" class="form-label">Họ tên:</label>
                        <input type="text" id="HoTen" asp-for="HoTen" class="form-control" required placeholder="Nhập họ tên">
                        <span asp-validation-for="HoTen" class="text-danger"></span>
                    </div>

                    <!-- Giới tính -->
                    <div class="mb-3">
                        <label class="form-label">Giới tính:</label>
                        <div class="d-flex">
                            <div class="form-check me-3">
                                <input type="radio" id="GioiTinhNam" asp-for="GioiTinh" class="form-check-input" value="true">
                                <label for="GioiTinhNam" class="form-check-label">Nam</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" id="GioiTinhNu" asp-for="GioiTinh" class="form-check-input" value="false">
                                <label for="GioiTinhNu" class="form-check-label">Nữ</label>
                            </div>
                        </div>
                        <span asp-validation-for="GioiTinh" class="text-danger"></span>
                    </div>

                    <!-- Số điện thoại -->
                    <div class="mb-3">
                        <label for="SoDienThoai" class="form-label">Số điện thoại:</label>
                        <input type="tel" id="SoDienThoai" asp-for="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại">
                        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email:</label>
                        <input type="email" id="Email" asp-for="Email" class="form-control" placeholder="Nhập email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Ngày sinh -->
                    <div class="mb-3">
                        <label for="NgaySinh" class="form-label">Ngày sinh:</label>
                        <input type="date" id="NgaySinh" asp-for="NgaySinh" class="form-control">
                        <span asp-validation-for="NgaySinh" class="text-danger"></span>
                    </div>

                    <!-- Quận - Huyện -->
                    <div class="mb-3">
                        <label for="QuanHuyen" class="form-label">Quận - Huyện:</label>
                        <input type="text" id="QuanHuyen" asp-for="QuanHuyen" class="form-control" placeholder="Nhập quận, huyện">
                        <span asp-validation-for="QuanHuyen" class="text-danger"></span>
                    </div>

                    <!-- Phường - Xã -->
                    <div class="mb-3">
                        <label for="PhuongXa" class="form-label">Phường - Xã:</label>
                        <input type="text" id="PhuongXa" asp-for="PhuongXa" class="form-control" placeholder="Nhập phường, xã">
                        <span asp-validation-for="PhuongXa" class="text-danger"></span>
                    </div>

                    <!--Nếu đã có tài khoản-->
                    <div class=" form-group text-center mt-3 mb-2">
                        <a asp-action="Login" class="text-primary">Đã có tài khoản? Đăng nhập ngay</a>
                    </div>

                    <!-- Nút đăng ký -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Đăng ký</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


