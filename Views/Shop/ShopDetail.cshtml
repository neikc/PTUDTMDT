
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

@model PTUDTMDT.ViewModels.ShopViewModel.ShopDetailViewModel

<div class="container-fluid py-5 mt-5">
    <div class="container py-5">
        <div class="row g-4 mb-5">
            <!-- Phần hiển thị sản phẩm -->
            <div class="col-lg-8 col-xl-9">
                <div class="row g-4">
                    <!-- Hình ảnh sản phẩm -->
                    <div class="col-lg-6">
                        <div class="border rounded">
                            <a href="#">
                                <img src="@Url.Content(Model.Product.LayDiaChiHinh(1))" class="img-fluid rounded" alt="Image">
                            </a>
                        </div>
                    </div>
                    <!-- Thông tin sản phẩm -->
                    <div class="col-lg-6">
                        <!-- Tên sản phẩm -->
                        <h4 class="fw-bold mb-3">@Model.Product.TenSanPham</h4>
                        <!-- Danh mục sản phẩm -->
                        <p class="mb-3">Danh mục: @Model.Product.MaLoaiNavigation.TenLoai</p>
                        <!-- Giá sản phẩm -->
                        @if (Model.Product.GiaSanPham > Model.Product.GiaSauGiam)
                        {
                            <h5 class="fw-bold mb-3 text-danger">Giảm @Model.Product.GiamGia%!</h5>
                            <h5 class="fw-bold mb-3"><span class="text-danger">@Model.Product.FormatPrice(Model.Product.GiaSauGiam)</span>     <span class="text-decoration-line-through">@Model.Product.FormatPrice(Model.Product.GiaSanPham)</span></h5>
                        }
                        else
                        {
                            <h5 class="fw-bold mb-3 text-danger">@Model.Product.FormatPrice(Model.Product.GiaSauGiam)</h5>
                        }

                        <!-- Đánh giá sản phẩm -->
                        <div class="d-flex mb-2">
                            @for (int i = 1; i <= Model.Product.AverageRating; i++)
                            {
                                <i class="fa fa-star text-secondary"></i> <!-- Sao đầy -->
                            }
                            @for (int i = Model.Product.AverageRating + 1; i <= 5; i++)
                            {
                                <i class="fa fa-star"></i> <!-- Sao trống -->
                            }
                        </div>
                        <!-- Mô tả ngắn về sản phẩm -->
                        <p class="mb-4">@Model.Product.ShortDesc</p>
                        <form asp-action="AddToCart" asp-controller="Cart" asp-route-MaSanPham="@Model.Product.MaSanPham">
                            <!-- Chọn số lượng sản phẩm -->
                            <div class="input-group quantity mb-5" style="width: 100px;">
                                <div class="input-group-btn">
                                    <!-- Nút giảm số lượng -->
                                    <button class="btn btn-sm btn-minus rounded-circle bg-light border" type="button">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                                <!-- Ô nhập số lượng -->
                                <input type="text" class="form-control form-control-sm text-center border-0" value="1">
                                <div class="input-group-btn">
                                    <!-- Nút tăng số lượng -->
                                    <button class="btn btn-sm btn-plus rounded-circle bg-light border" type="button">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                            <!-- Nút thêm vào giỏ hàng -->
                            <button type="submit" class="btn border border-secondary rounded-pill px-4 py-2 mb-4 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Thêm vào giỏ hàng</button>
                        </form>
                        </div>
                    <!-- Tabs cho mô tả và đánh giá sản phẩm -->
                    <div class="col-lg-12">
                        <nav>
                            <div class="nav nav-tabs mb-3">
                                <!-- Tab mô tả sản phẩm -->
                                <button class="nav-link active border-white border-bottom-0" type="button" role="tab"
                                        id="nav-about-tab" data-bs-toggle="tab" data-bs-target="#nav-about"
                                        aria-controls="nav-about" aria-selected="true">
                                    Mô tả
                                </button>
                                <!-- Tab đánh giá sản phẩm -->
                                <button class="nav-link border-white border-bottom-0" type="button" role="tab"
                                        id="nav-mission-tab" data-bs-toggle="tab" data-bs-target="#nav-mission"
                                        aria-controls="nav-mission" aria-selected="false">
                                    Đánh giá
                                </button>
                            </div>
                        </nav>
                        <div class="tab-content mb-5">
                            <!-- Nội dung tab mô tả -->
                            <div class="tab-pane active" id="nav-about" role="tabpanel" aria-labelledby="nav-about-tab">
                                @Model.Product.MoTa
                            </div>
                            <!-- Nội dung tab đánh giá -->
                            <div class="tab-pane" id="nav-mission" role="tabpanel" aria-labelledby="nav-mission-tab">
                                @if (Model.Product.DanhGiaSanPhams == null || !Model.Product.DanhGiaSanPhams.Any())
                                {
                                    <div class="text-center">
                                        <p>Không có đánh giá nào TvT</p>
                                    </div>
                                }
                                else
                                {
                                    foreach (var review in Model.Product.DanhGiaSanPhams)
                                    {
                                        <div class="d-flex">
                                            @if (review.MaTaiKhoanNavigation?.MaKhachHangNavigation != null)
                                            {
                                                <img src="@Url.Content(@review.MaTaiKhoanNavigation.MaKhachHangNavigation.LayDiaChiHinh())"
                                                     class="img-fluid rounded-circle p-3"
                                                     style="width: 100px; height: 100px; object-fit: contain"
                                                     alt="@review.LoiDanhGia">
                                                <div class="">
                                                    <p class="mb-2" style="font-size: 14px;">12/11/2024</p>
                                                    <div class="d-flex justify-content-between">
                                                        <h5>@review.MaTaiKhoanNavigation.MaKhachHangNavigation.HoTen</h5>
                                                        <div class="d-flex mb-3">
                                                            @for (int i = 1; i <= (review.SaoDanhGia ?? 0); i++)
                                                            {
                                                                <i class="fa fa-star text-secondary"></i>
                                                            }
                                                            @for (int i = (review.SaoDanhGia ?? 0) + 1; i <= 5; i++)
                                                            {
                                                                <i class="fa fa-star"></i>
                                                            }
                                                        </div>
                                                    </div>
                                                    <p>@review.LoiDanhGia</p>
                                                </div>
                                            }
                                        </div>
                                    }
                                }
                            </div>
                            <div class="tab-pane" id="nav-vision" role="tabpanel">
                                <!-- Thông tin bổ sung về sản phẩm -->
                                <p class="text-dark">@Model.Product.ShortDesc</p>
                            </div>
                        </div>
                    </div>


                    <!--PHẦN BÌNH LUẬN-->
                    <!-- Form bình luận -->
                    @if (User.Identity.IsAuthenticated)  // Kiểm tra đã đăng nhập chưa
                    {
                        <form asp-controller="Shop" asp-action="AddReview" method="post" class="mt-4">
                            <h4 class="mb-5 fw-bold">Thêm đánh giá của bạn</h4>

                            <input type="hidden" name="MaSanPham" value="@Model.Product.MaSanPham" />

                            <div class="row g-4">
                                <div class="col-lg-12">
                                    <!-- Nhập nội dung đánh giá -->
                                    <div class="border-bottom rounded my-4">
                                        <textarea name="LoiDanhGia" id="" class="form-control border-0" rows="8" placeholder="Viết bình luận của bạn ở đây nhé!" required></textarea>
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <!-- Khung đánh giá và nút gửi bình luận -->
                                    <div class="d-flex justify-content-between py-3 mb-5">
                                        <div class="d-flex align-items-center">
                                            <p class="mb-0 me-3">Vui lòng đánh giá:</p>
                                            <p>
                                                <span class="star-rating">
                                                    <label for="rate-1" style="--i:1"><i class="fa-solid fa-star"></i></label>
                                                    <input type="radio" name="SaoDanhGia" id="rate-1" value="1">
                                                    <label for="rate-2" style="--i:2"><i class="fa-solid fa-star"></i></label>
                                                    <input type="radio" name="SaoDanhGia" id="rate-2" value="2" checked="">
                                                    <label for="rate-3" style="--i:3"><i class="fa-solid fa-star"></i></label>
                                                    <input type="radio" name="SaoDanhGia" id="rate-3" value="3">
                                                    <label for="rate-4" style="--i:4"><i class="fa-solid fa-star"></i></label>
                                                    <input type="radio" name="SaoDanhGia" id="rate-4" value="4">
                                                    <label for="rate-5" style="--i:5"><i class="fa-solid fa-star"></i></label>
                                                    <input type="radio" name="SaoDanhGia" id="rate-5" value="5">
                                                </span>
                                            </p>
                                        </div>

                                        <!-- Nút để gửi bình luận -->
                                        <button type="submit" class="btn border border-secondary text-primary rounded-pill px-4 py-3">Đăng bình luận</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <!--Đăng nhập rồi thì sẽ được trả về trang sản phẩm hiện tại, vị trí người dùng đang ở hiện tại được lưu trong ReturnURL-->
                        <div class="text-center mt-4">
                            <p>Vui lòng <a asp-controller="Account" asp-action="Login" asp-route-ReturnURL="@Url.Action("ShopDetail", "Shop", new { MaSanPham = Model.Product.MaSanPham })" class="text-primary">đăng nhập</a> để đánh giá sản phẩm</p>
                        </div>


                    }
                    <!--KẾT THÚC BÌNH LUẬN-->

                </div>
            </div>

            <!--THANH SIDEBAR-->
            <div class="col-lg-4 col-xl-3">
                <div class="row g-4 fruite">
                    <div class="col-lg-12">
                        <!--PHẦN THANH TÌM KIẾM-->
                        <!--Nếu người dùng tìm kiếm thì chuyển người dùng về ShopIndex luôn-->
                        <form asp-action="ShopIndex" method="get" class="w-100 mx-auto d-flex mb-4">
                            <div class="input-group w-100">
                                <input type="search"
                                       name="searchTerm"
                                       class="form-control p-3"
                                       placeholder="Nhập từ khóa"
                                       aria-describedby="search-icon-1"
                                       required />
                                <button type="submit" id="search-icon-1" class="input-group-text p-3">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </form>
                        <!--PHẦN KẾT THÚC THANH TÌM KIẾM-->

                        <!--PHẦN DANH MỤC SẢN PHẨM-->
                        <div class="mb-4">
                            <h4>Danh mục</h4>
                            <!--Toàn bộ sản phẩm-->
                            <ul class="list-unstyled fruite-categorie">
                                <li>
                                    <div class="d-flex justify-content-between fruite-name">
                                        <a asp-action="ShopIndex">
                                            <i class="fas fa-apple-alt me-2"></i>Tất cả sản phẩm
                                        </a>
                                    </div>
                                </li>
                                <!--Các danh mục sản phẩm-->
                                @foreach (LoaiSanPham loai in Model.Categories)
                                {
                                    <li>
                                        <div class="d-flex justify-content-between fruite-name">
                                            <a asp-action="ShopIndex"
                                               asp-route-Category="@loai.MaLoai">
                                                <i class="fas fa-apple-alt me-2"></i>@loai.TenLoai
                                            </a>
                                            <span>(@loai.SanPhams.Count)</span>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                        <!--KẾT THÚC PHẦN DANH MỤC SẢN PHẨM-->

                    </div>
                    <div class="col-lg-12">
                        <!-- Sản phẩm nổi bật / Sản phẩm BestSeller -->
                        <h4 class="mb-3">Sản phẩm nổi bật</h4>

                        @if (Model.BestSellers != null && Model.BestSellers.Any())
                        {
                            foreach (var product in Model.BestSellers)
                            {
                                <div class="d-flex align-items-center justify-content-start mb-3">
                                    <!-- Hình ảnh sản phẩm -->
                                    <div class="rounded me-4" style="width: 100px; height: 100px;">
                                        <a href="@Url.Action("ShopDetail", "Shop", new { MaSanPham = product.MaSanPham })">
                                            <img src="@Url.Content(product.LayDiaChiHinh(1))" class="img-fluid rounded" style="max-height:100px; object-fit: contain" alt="@product.ShortDesc">
                                        </a>
                                    </div>

                                    <div>
                                        <!-- Tên sản phẩm -->
                                        <h6 class="mb-2">
                                            <a href="@Url.Action("ShopDetail", "Shop", new { MaSanPham = product.MaSanPham })" class="text-dark">
                                                @product.TenSanPham
                                            </a>
                                        </h6>

                                        <!-- Đánh giá sản phẩm -->
                                        <div class="d-flex mb-2">
                                            @for (int i = 1; i <= Model.Product.AverageRating; i++)
                                            {
                                                <i class="fa fa-star text-secondary"></i> <!-- Sao đầy -->
                                            }
                                            @for (int i = Model.Product.AverageRating + 1; i <= 5; i++)
                                            {
                                                <i class="fa fa-star"></i> <!-- Sao trống -->
                                            }
                                        </div>

                                        <!-- Giá sản phẩm -->
                                        <div class="d-flex mb-2">
                                            <h5 class="fw-bold me-2">@product.FormatPrice(product.GiaSauGiam)</h5>
                                            @if (product.GiaSanPham > product.GiaSauGiam)
                                            {
                                                <h5 class="text-danger text-decoration-line-through">@product.FormatPrice(product.GiaSanPham)</h5>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }

                        }
                        else
                        {
                            <p>Không có sản phẩm nổi bật nào.</p>
                        }

                        <!-- Nút xem thêm sản phẩm -->
                        <div class="d-flex justify-content-center my-4">
                            <a href="@Url.Action("ShopIndex","Shop")" class="btn border border-secondary px-4 py-3 rounded-pill text-primary w-100">Xem thêm</a>
                        </div>
                    </div>
                    <!-- Hình ảnh banner -->
                    <div class="col-lg-12">
                        <div class="position-relative">
                            <img src="~/img/banner-fruits.jpg" class="img-fluid w-100 rounded" alt="">
                            <div class="position-absolute" style="top: 50%; right: 10px; transform: translateY(-50%);">
                                <h3 class="text-secondary fw-bold">Tươi <br> Trái cây <br> Banner</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--KẾT THÚC THANH SIDEBAR-->
        </div>


        <!--PHẦN CÁC SẢN PHẨM LIÊN QUAN-->
        <h1 class="fw-bold mb-0">Mọi người cũng mua:</h1>
        <div class="vesitable">
            <div class="owl-carousel vegetable-carousel justify-content-center">
                @foreach (var product in Model.RelatedProducts)
                {
                    <div class="border border-primary rounded position-relative vesitable-item">
                        <div class="vesitable-img">
                            <a href="@Url.Action("ShopDetail", "Shop", new { MaSanPham = product.MaSanPham })">
                            <img src="@Url.Content(product.LayDiaChiHinh(1))" class="img-fluid w-100 rounded-top" alt="@product.ShortDesc">
                        </div>
                        <div class="text-white bg-primary px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;">@product.MaLoaiNavigation.TenLoai</div>
                        <div class="p-4 pb-0 rounded-bottom">
                            <a href="@Url.Action("ShopDetail", "Shop", new { MaSanPham = product.MaSanPham })" class="text-dark">
                                @product.TenSanPham
                            </a>
                            <p>@product.ShortDesc</p>
                            <div class="d-flex justify-content-between align-items-end flex-lg-wrap">
                                <!--FormatPrice chuyển từ số sang định dạng tiền tệ, hàm này viết thêm trong Model Sanpham-->
                                <!-- Giá sản phẩm -->
                                <h5 class="fw-bold me-2">@product.FormatPrice(product.GiaSauGiam)</h5>
                                @if (product.GiaSanPham > product.GiaSauGiam)
                                {
                                    <h5 class="text-danger">
                                        <span class="text-decoration-line-through">@product.FormatPrice(product.GiaSanPham)</span>
                                        (-@product.GiamGia%)
                                    </h5>
                                }
                            </div>
                            <a href="javascript:void(0);"
                                style="margin-bottom:1em; padding-top:1em; padding-bottom:1em"
                               onclick="document.getElementById('addToCartForm_ShopDetail').submit();"
                               class="btn border border-secondary rounded-pill px-3 text-primary">
                                <i class="fa fa-shopping-bag me-2 text-primary"></i>Thêm vào giỏ hàng
                            </a>

                            <form id="addToCartForm_ShopDetail" action="@Url.Action("AddToCart", "Cart")" method="post" style="display:none;">
                                <input type="hidden" name="MaSanPham" value="@product.MaSanPham" />
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!--KẾT THÚC PHẦN CÁC SẢN PHẨM LIÊN QUAN-->
    </div>
</div>

