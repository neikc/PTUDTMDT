@{
    ViewData["Title"] = "Cửa hàng";
}
@model PTUDTMDT.ViewModels.ShopViewModel

<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <!--Tiêu đề chính cửa cửa hàng-->
        <h1 class="mb-4">Cửa hàng trái cây sạch</h1>
        <!--Bắt đầu hàng thứ nhất với khoảng cách giữa các cột (g-4)-->
        <div class="row g-4">
            <div class="col-lg-12">
                <!--Hàng thứ hai với ô tìm kiếm và bộ lọc-->
                <div class="row g-4">
                    <div class="col-xl-3">
                        <!-- Nhóm ô tìm kiếm và biểu tượng kính lúp -->
                        <form asp-action="ShopIndex" method="get" class="input-group w-100 mx-auto d-flex">
                            <input type="search" name="searchTerm" class="form-control p-3" placeholder="Tìm kiếm sản phẩm" aria-describedby="search-icon-1">
                            <button type="submit" id="search-icon-1" class="input-group-text p-3">
                                <i class="fa fa-search"></i>
                            </button>
                        </form>

                    </div>

                    <!--Khoảng trống giữa các cột, chiếm 6 cột-->
                    <div class="col-6"></div>
                    <div class="col-xl-3">
                        <!--Hộp chọn kiểu sắp xếp label và select droptown -->
                        <div class="bg-light ps-3 py-3 rounded d-flex justify-content-between mb-4">
                            <label for="fruits">Default Sorting:</label>
                            <select id="fruits" name="fruitlist" class="border-0 form-select-sm bg-light me-3" form="fruitform">
                                <!--Các tùy chọn sắp xếp-->
                                <option value="volvo">Trang trông</option>
                                <option value="saab">Phổ biến</option>
                                <option value="opel">Hữu cơ</option>
                                <option value="audi">Tuyệt vời</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row g-4">
                    <div class="col-lg-3">
                        <div class="row g-4">

                            <!--PHẦN DANH SÁCH DANH MỤC SẢN PHẨM-->
                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <h4>Danh mục</h4>
                                    <ul class="list-unstyled fruite-categorie">
                                        @foreach (var loai in Model.Categories)  // khai báo rõ type
                                        {
                                            <li>
                                                <div class="d-flex justify-content-between fruite-name">
                                                    <a href="#"><i class="fas fa-apple-alt me-2"></i>@loai.TenLoai</a>
                                                    <span>(@loai.SanPhams.Count)</span>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                                <!--KẾT THÚC PHẦN DANH SÁCH DANH MỤC SẢN PHẨM-->
                            </div>

                            <!--PHẦN BỘ LỌC GIÁ CỦA SẢN PHẨM-->
                            <form asp-action="ShopIndex" method="get">
                                <h4 class="mb-2">Gía sản phẩm</h4>

                                <h6>Giá từ:</h6>

                                <input type="range" class="form-range w-100" id="rangeInputMin" name="priceRangeMin" min="1000" max="1000000" value="0" step="500" oninput="updatePriceRange('Min')">

                                <output id="amountMin" name="amountMin" for="rangeInputMin">0</output>

                                <h6>Giá đến:</h6>

                                <input type="range" class="form-range w-100" id="rangeInputMax" name="priceRangeMax" min="1000" max="1000000" value="0" step="500" oninput="updatePriceRange('Max')">

                                <output id="amountMax" name="amountMax" for="rangeInputMax">0</output>

                                <button type="submit" class="btn btn-primary">Lọc sản phẩm</button>

                                <!--Script format định dạng tiền cho thanh trượt-->
                                <script>
                                    function formatCurrency(value) {
                                        return value.toString().replace(/\B(?=(\d{3})+(?!\d))/g, '.');
                                    }

                                    function updatePriceRange(type) {
                                        var minRange = document.getElementById('rangeInputMin');
                                        var maxRange = document.getElementById('rangeInputMax');

                                        var minValue = minRange.value;
                                        var maxValue = maxRange.value;

                                        if (type === 'Min') {
                                            document.getElementById('amountMin').textContent = formatCurrency(minValue);
                                        } else {
                                            document.getElementById('amountMax').textContent = formatCurrency(maxValue);
                                        }
                                    }

                                    document.addEventListener('DOMContentLoaded', function () {
                                        updatePriceRange('Min');
                                        updatePriceRange('Max');
                                    });
                                </script>

                            </form>
                            <!--KẾT THÚC PHẦN BỘ LỌC GIÁ CỦA SẢN PHẨM-->

                            <!--PHẦN LỌC THEO CÁC NHÃN THẦY YÊU CẦU-->
                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <!--Tiêu đề trang bổ sung-->
                                    <h4>Bổ sung</h4>
                                    <div class="mb-2">
                                        <!--Tùy chọn radio cho các nhãn với loại sản phẩm bổ sung khác nhau-->
                                        <input type="radio" class="me-2" id="Categories-1" name="Categories-1" value="Beverages">
                                        <label for="Categories-1"> Hữu cơ</label>
                                    </div>
                                    <div class="mb-2">
                                        <input type="radio" class="me-2" id="Categories-2" name="Categories-1" value="Beverages">
                                        <label for="Categories-2"> Tươi mát</label>
                                    </div>
                                    <div class="mb-2">
                                        <input type="radio" class="me-2" id="Categories-3" name="Categories-1" value="Beverages">
                                        <label for="Categories-3"> Giảm giá</label>
                                    </div>
                                    <div class="mb-2">
                                        <input type="radio" class="me-2" id="Categories-4" name="Categories-1" value="Beverages">
                                        <label for="Categories-4"> Khuyến mãi</label>
                                    </div>
                                    <div class="mb-2">
                                        <input type="radio" class="me-2" id="Categories-5" name="Categories-1" value="Beverages">
                                        <label for="Categories-5"> Hết hạn</label>
                                    </div>
                                </div>
                            </div>
                            <!--PHẦN LỌC THEO CÁC NHÃN THẦY YÊU CẦU-->

                            <!--PHẦN SẢN PHẨM NỔI BẬT-->
                            <div class="col-lg-12">
                                <!--Sản phẩm nổi bật-->
                                <h4 class="mb-3">Sản phẩm nổi bật</h4>
                                <!--Hình ảnh sản phẩm 1-->
                                <div class="d-flex align-items-center justify-content-start">
                                    <div class="rounded me-4" style="width: 100px; height: 100px;">
                                        <img src="~/img/featur-1.jpg" class="img-fluid rounded" alt="">
                                    </div>
                                    <div>
                                        <!--Tên sản phẩm 1: Chuối khổng lồ-->'
                                        <h6 class="mb-2">Chuối khổng lồ</h6>
                                        <!--Đánh giá của sản phẩm 1 (4 sao)-->
                                        <div class="d-flex mb-2">
                                            <i class="fa fa-star text-secondary"></i>
                                            <i class="fa fa-star text-secondary"></i>
                                            <i class="fa fa-star text-secondary"></i>
                                            <i class="fa fa-star text-secondary"></i>
                                            <i class="fa fa-star"></i>
                                        </div>
                                        <!--Gía của sản phẩm 1: Bao gồm giá hiện tại và giá gốc-->
                                        <div class="d-flex mb-2">
                                            <h5 class="fw-bold me-2">2.99 $</h5>
                                            <h5 class="text-danger text-decoration-line-through">4.11 $</h5>
                                        </div>
                                    </div>
                                </div>

                                
                                <!--Hình ảnh sản phẩm 2: Dâu tây-->
                                <div class="d-flex align-items-center justify-content-start">
                                    <div class="rounded me-4" style="width: 100px; height: 100px;">
                                        <img src="~/img/featur-2.jpg" class="img-fluid rounded" alt="">
                                    </div>
                                    <div>
                                        <!--Tên sản phẩm 2-->
                                        <h6 class="mb-2">Chuối khổng lồ</h6>
                                        <!--Đánh giá của sản phẩm 2-->
                                        <div class="d-flex mb-2">
                                            <i class="fa fa-star text-secondary"></i>
                                            <i class="fa fa-star text-secondary"></i>
                                            <i class="fa fa-star text-secondary"></i>
                                            <i class="fa fa-star text-secondary"></i>
                                            <i class="fa fa-star"></i>
                                        </div>
                                        <!--Gía của sản phẩm 2: Bao gồm giá hiện tại và giá gốc-->
                                        <div class="d-flex mb-2">
                                            <h5 class="fw-bold me-2">2.99 $</h5>
                                            <h5 class="text-danger text-decoration-line-through">4.11 $</h5>
                                        </div>
                                    </div>
                                </div>
                                <!--Hình ảnh sản phẩm 3: Bí ngô vui vẻ-->
                                <div class="d-flex align-items-center justify-content-start">
                                    <div class="rounded me-4" style="width: 100px; height: 100px;">
                                        <img src="~/img/featur-3.jpg" class="img-fluid rounded" alt="">
                                    </div>
                                    <div>
                                        <!--Tên sản phẩm 3-->
                                        <h6 class="mb-2">Bí ngô vui vẻ</h6>
                                        <!--Đánh giá sản phẩm 3-->
                                        <div class="d-flex mb-2">
                                            <i class="fa fa-star text-secondary"></i>
                                            <i class="fa fa-star text-secondary"></i>
                                            <i class="fa fa-star text-secondary"></i>
                                            <i class="fa fa-star text-secondary"></i>
                                            <i class="fa fa-star"></i>
                                        </div>
                                        <!--Gía sản phẩm 3: Bao gồm giá hiện tại và giá gốc-->
                                        <div class="d-flex mb-2">
                                            <h5 class="fw-bold me-2">2.99 $</h5>
                                            <h5 class="text-danger text-decoration-line-through">4.11 $</h5>
                                        </div>
                                    </div>
                                </div>
                                <!--Hiển thị nút xem thêm -->
                                <div class="d-flex justify-content-center my-4">
                                    <a href="#" class="btn border border-secondary px-4 py-3 rounded-pill text-primary w-100">Xem thêm</a>
                                </div>
                            </div>
                            <!--KẾT THÚC PHẦN SẢN PHẨM NỔI BẬT-->

                            <!--PHẦN BANNER PHỤ-->
                            <div class="col-lg-12">
                                <div class="position-relative">
                                    <img src="~/img/banner-fruits.jpg" class="img-fluid w-100 rounded" alt="">
                                    <div class="position-absolute" style="top: 50%; right: 10px; transform: translateY(-50%);">
                                        <h3 class="text-secondary fw-bold">Fresh <br> Fruits <br> Banner</h3>
                                    </div>
                                </div>
                            </div>
                            <!--KẾT THÚC PHẦN BANNER PHỤ-->

                        </div>
                    </div>

                    <!--PHẦN DANH MỤC CÁC SẢN PHẨM CỦA CỬA HÀNG-->
                    <div class="col-lg-9">
                        <div class="row g-4 justify-content-center">
                            @if (!Model.Products.Any())
                            {
                                <div class="text-center">
                                    <p>Không có sản phẩm nào TvT</p>
                                </div>
                            } else
                            {
                                @foreach (var product in Model.Products)
                                {
                                    <div class="col-md-6 col-lg-6 col-xl-4">
                                        <!--Dùng Flex để đẩy hình lên trên, phần mô tả xuống dưới để ô sản phẩm nhìn đẹp hơn-->
                                        <div class="rounded position-relative fruite-item border border-secondary d-flex flex-column justify-content-between">
                                            <div class="fruite-img">
                                                <img src="@Url.Content(product.LayDiaChiHinh(1))" class="img-fluid w-100 rounded-top" style="max-height:305px; object-fit: contain" alt="@product.ShortDesc">
                                            </div>
                                            <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">@product.MaLoaiNavigation.TenLoai</div>
                                            <div class="p-4 mt-auto border-top-0 rounded-bottom">
                                                <h4>@product.TenSanPham</h4>
                                                <!--Nếu mô tả dài hơn 100 kí tự thì ẩn phần sau, chỉ để lại...-->
                                                <p>
                                                    @(product.MoTa.Length > 100 ? product.MoTa.Substring(0, 100) + "..." : product.ShortDesc)
                                                </p>
                                                <div class="d-flex justify-content-between align-items-end flex-lg-wrap">
                                                    <!--FormatPrice chuyển từ số sang định dạng tiền tệ, hàm này viết thêm trong Model Sanpham-->
                                                    <p class="text-dark fs-5 fw-bold mb-0">@product.FormatPrice(product.GiaSauGiam)</p>
                                                    @if (product.GiamGia != 0)
                                                    {
                                                        <div>
                                                            <p class="text-danger mb-0">Giảm giá: @product.GiamGia<span>%</span></p>
                                                            <p class="text-danger text-decoration-line-through mb-0">@product.FormatPrice(product.GiaSanPham)</p>
                                                        </div>
                                                    }
                                                </div>
                                                <a href="#" class="btn border border-secondary rounded-pill px-3 text-primary" style="margin-top: 5px"><i class="fa fa-shopping-bag me-2 text-primary"></i>Thêm vào giỏ hàng</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            
                        </div>
                        
                        <!--PHẦN PHÂN TRANG CỦA DANH MỤC SẢN PHẨM-->
                        <div class="col-12">
                            <div class="pagination d-flex justify-content-center mt-5">
                                <!-- Nút về trang trước -->
                                <a href="@Url.Action("ShopIndex", new { page = Model.Products.PageNumber > 1 ? Model.Products.PageNumber - 1 : 1 })" class="rounded">«</a>

                                @{
                                    //Khởi tạo các biến: Tổng cộng các trang, trang hiện tại, trang bắt đầu, trang kết thúc
                                    int totalPages = Model.Products.PageCount;
                                    int currentPage = Model.Products.PageNumber;
                                    int startPage = Math.Max(1, currentPage - 2);
                                    int endPage = Math.Min(totalPages, startPage + 4);

                                    if (startPage > 1)
                                    {
                                        <a href="@Url.Action("ShopIndex", new { page = 1 })" class="rounded">1</a>
                                        if (startPage > 2)
                                        {
                                            <a href="#" class="rounded">...</a>
                                        }
                                    }

                                    for (int i = startPage; i <= endPage; i++)
                                    {
                                        if (i == currentPage)
                                        {
                                            <a href="#" class="active rounded">@i</a>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("ShopIndex", new { page = i })" class="rounded">@i</a>
                                        }
                                    }

                                    if (endPage < totalPages)
                                    {
                                        if (endPage < totalPages - 1)
                                        {
                                            <a href="#" class="rounded">...</a>
                                        }
                                        <a href="@Url.Action("ShopIndex", new { page = totalPages })" class="rounded">@totalPages</a>
                                    }
                                }

                                <!-- Nút đến trang tiếp theo -->
                                <a href="@Url.Action("ShopIndex", new { page = Model.Products.PageNumber < Model.Products.PageCount ? Model.Products.PageNumber + 1 : Model.Products.PageCount })" class="rounded">»</a>
                            </div>
                        </div>
                        <!--KẾT THÚC PHẦN PHÂN TRANG CỦA DANH MỤC SẢN PHẨM-->
                    
                    </div>
                    <!--KẾT THÚC PHẦN DANH MỤC CÁC SẢN PHẨM CỦA CỬA HÀNG-->
                
                </div>
            </div>
        </div>
    </div>
</div>
