                            <div class="ms-4 d-block">
                                <h4 class="text-dark">
                                    @if (@review.MaTaiKhoanNavigation.MaKhachHangNavigation.GioiTinh == false)
                                    {
                                        <span>Anh </span>
                                    }
                                    else
                                    {
                                        <span>Chị </span>
                                    }
                                    @review.MaTaiKhoanNavigation.MaKhachHangNavigation.HoTen

                                </h4>
                                <p class="m-0 pb-3">@review.MaTaiKhoanNavigation.MaKhachHangNavigation.QuanHuyen</p>
                                <div class="d-flex pe-5">
                                    @{
                                        int saoDanhGia = review.SaoDanhGia ?? 5; // Giá trị mặc định là 5 nếu SaoDanhGia null
                                        for (int i = 1; i <= saoDanhGia; i++)
                                        {
                                            <i class="fa fa-star text-secondary"></i> <!-- Sao đầy -->
                                        }
                                        for (int i = saoDanhGia + 1; i <= 5; i++)
                                        {
                                            <i class="fa fa-star"></i> <!-- Sao trống -->
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
