<!-- Giới thiệu toàn bộ sản phẩm của doanh nghiệp -->
<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <div class="tab-class text-center">
            <div class="row g-4">
                <div class="col-lg-4 text-start">
                    <h1>Các sản phẩm của chúng tôi</h1>
                </div>
                <!--Danh mục sản phẩm-->
                <div class="col-lg-8 text-end">
                    <ul class="nav nav-pills d-inline-flex text-center mb-5">
                        <li class="nav-item">
                            <a class="d-flex py-2 m-2 bg-light rounded-pill active" data-bs-toggle="pill" href="#tab-all">
                                <span class="text-dark px-3" style="width: 130px;">Toàn bộ</span>
                            </a>
                        </li>
                        @foreach (var category in Model.Categories)
                        {
                            <li class="nav-item">
                                <a class="d-flex py-2 m-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-@category.MaLoai">
                                    <span class="text-dark px-3">@category.TenLoai</span>
                                </a>
                            </li>

                        }
                    </ul>
                </div>
            </div>
            <div class="tab-content">
                <!-- Tab danh mục - Toàn bộ sản phẩm -->
                <div id="tab-all" class="tab-pane fade show p-0 active">
                    <div class="row g-4">
                        @foreach (var product in Model.Products.Take(6))
                        {
                            <div class="col-md-6 col-lg-4 col-xl-3">
                                <!--Dùng Flex để đẩy hình lên trên, phần mô tả xuống dưới để ô sản phẩm nhìn đẹp hơn-->
                                <div class="rounded position-relative fruite-item border border-secondary d-flex flex-column justify-content-between">
                                    <div class="fruite-img">
                                        <a href="@Url.Action("ShopDetail", "Shop", new { MaSanPham = product.MaSanPham })">
                                            <img src="@Url.Content(product.LayDiaChiHinh(1))" class="img-fluid w-100 rounded-top" style="max-height:305px; object-fit: contain" alt="@product.ShortDesc">
                                    </div>
                                    <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">@product.MaLoaiNavigation.TenLoai</div>
                                    <div class="p-4 mt-auto border-top-0 rounded-bottom">
                                        <h4>@product.TenSanPham</h4>
                                        <!--Nếu mô tả dài hơn 100 kí tự thì ẩn phần sau, chỉ để lại...-->
                                        <p>
                                            @(product.MoTa.Length > 100 ? product.MoTa.Substring(0, 100) + "..." : product.MoTa)
                                        </p>
                                        <!--Đánh giá-->
                                        <div class="d-flex justify-content-between flex-lg-wrap">
                                            <div class="d-flex mb-2">
                                                @for (int i = 1; i <= product.AverageRating; i++)
                                                {
                                                    <i class="fa fa-star text-secondary"></i> <!-- Sao đầy -->
                                                }
                                                @for (int i = product.AverageRating + 1; i <= 5; i++)
                                                {
                                                    <i class="fa fa-star"></i> <!-- Sao trống -->
                                                }
                                            </div>
                                            <p>(@product.DanhGiaSanPhams.Count())</p>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-end flex-lg-wrap">
                                            <!--FormatPrice chuyển từ số sang định dạng tiền tệ, hàm này viết thêm trong Model Sanpham-->
                                            <!-- Giá sản phẩm -->
                                            <h5 class="fw-bold me-2">@product.FormatPrice(product.GiaSauGiam)</h5>
                                            @if (product.GiaSanPham > product.GiaSauGiam)
                                            {
                                                <h5 class="text-danger">
                                                    <span class="text-decoration-line-through">@product.FormatPrice(product.GiaSanPham)</span>
                                                    (-@product.GiamGia%)
                                                </h5>
                                            }
                                        </div>
                                        <a href="javascript:void(0);"
                                           onclick="document.getElementById('addToCartForm_Index1').submit();"
                                           class="btn border border-secondary rounded-pill px-3 text-primary">
                                            <i class="fa fa-shopping-bag me-2 text-primary"></i>Thêm vào giỏ hàng
                                        </a>

                                        <form id="addToCartForm_Index1" action="@Url.Action("AddToCart", "Cart")" method="post" style="display:none;">
                                            <input type="hidden" name="MaSanPham" value="@product.MaSanPham" />
                                        </form>

                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="d-flex justify-content-center my-4">
                        <a href="@Url.Action("ShopIndex","Shop")" class="btn border border-secondary px-4 py-3 rounded-pill text-primary w-100">Xem thêm</a>
                    </div>
                </div>

                <!-- Tab danh mục - Từng danh mục sản phẩm-->
                <!-- Chỉ hiển thị tối đa 6 sản phẩm, xem thêm thì bấm nút xem thêm-->
                @foreach (var category in Model.Categories)
                {
                    <div id="tab-@category.MaLoai" class="tab-pane fade show p-0">
                        <div class="row g-4">
                            @foreach (var product in Model.Products.Where(p => p.MaLoai == category.MaLoai).Take(6))
                            {
                                <div class="col-md-6 col-lg-4 col-xl-3">
                                    <!--Dùng Flex để đẩy hình lên trên, phần mô tả xuống dưới để ô sản phẩm nhìn đẹp hơn-->
                                    <div class="rounded position-relative fruite-item border border-secondary d-flex flex-column justify-content-between">
                                        <div class="fruite-img">
                                            <a href="@Url.Action("ShopDetail", "Shop", new { MaSanPham = product.MaSanPham })">
                                                <img src="@Url.Content(product.LayDiaChiHinh(1))" class="img-fluid w-100 rounded-top" style="max-height:305px; object-fit: contain" alt="@product.ShortDesc">
                                        </div>
                                        <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">@product.MaLoaiNavigation.TenLoai</div>
                                        <div class="p-4 mt-auto border-top-0 rounded-bottom">
                                            <h4>@product.TenSanPham</h4>
                                            <!--Nếu mô tả dài hơn 100 kí tự thì ẩn phần sau, chỉ để lại...-->
                                            <p>
                                                @(product.MoTa.Length > 100 ? product.MoTa.Substring(0, 100) + "..." : product.MoTa)
                                            </p>
                                            <!--Đánh giá-->
                                            <div class="d-flex justify-content-between flex-lg-wrap">
                                                <div class="d-flex mb-2">
                                                    @for (int i = 1; i <= product.AverageRating; i++)
                                                    {
                                                        <i class="fa fa-star text-secondary"></i> <!-- Sao đầy -->
                                                    }
                                                    @for (int i = product.AverageRating + 1; i <= 5; i++)
                                                    {
                                                        <i class="fa fa-star"></i> <!-- Sao trống -->
                                                    }
                                                </div>
                                                <p>(@product.DanhGiaSanPhams.Count())</p>
                                            </div>
                                            <div class="d-flex justify-content-between align-items-end flex-lg-wrap">
                                                <!--FormatPrice chuyển từ số sang định dạng tiền tệ, hàm này viết thêm trong Model Sanpham-->
                                                <!-- Giá sản phẩm -->
                                                <h5 class="fw-bold me-2">@product.FormatPrice(product.GiaSauGiam)</h5>
                                                @if (product.GiaSanPham > product.GiaSauGiam)
                                                {
                                                    <h5 class="text-danger">
                                                        <span class="text-decoration-line-through">@product.FormatPrice(product.GiaSanPham)</span>
                                                        (-@product.GiamGia%)
                                                    </h5>
                                                }
                                            </div>
                                            <!--Thêm vào giỏ hàng-->
                                            <a href="javascript:void(0);"
                                               onclick="document.getElementById('addToCartForm_Index2').submit();"
                                               class="btn border border-secondary rounded-pill px-3 text-primary">
                                                <i class="fa fa-shopping-bag me-2 text-primary"></i>Thêm vào giỏ hàng
                                            </a>

                                            <form id="addToCartForm_Index2" action="@Url.Action("AddToCart", "Cart")" method="post" style="display:none;">
                                                <input type="hidden" name="MaSanPham" value="@product.MaSanPham" />
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="d-flex justify-content-center my-4">
                            <a href="@Url.Action("ShopIndex","Shop", new { Category = category.MaLoai })" class="btn border border-secondary px-4 py-3 rounded-pill text-primary w-100">Xem thêm</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Kết thúc giới thiệu toàn bộ sản phẩm của doanh nghiệp-->

